[volume]
command=i3blocks-contrib/volume/volume
interval=5
signal=10
STEP=5%
LABEL=VOL 

[bluetooth]
command=output=$(bluetoothctl devices Connected | head -n1 | cut -d' ' -f3-); [[ "$output" == "/"* ]] && echo "BZ down" || echo BZ "$output"
interval=60

[brightness]
command=echo "BRT $(brightnessctl -p | awk -F'[()]' '/Current brightness:/ {print $2}')"
interval=5

[battery]
command=i3blocks-contrib/battery/battery
interval=30
LABEL=BTR 

[disk]
command=i3blocks-contrib/disk/disk
LABEL=/HOME 
interval=30
instance=/home

[disk]
command=i3blocks-contrib/disk/disk
LABEL=/ 
interval=30
instance=/

[memory]
command=i3blocks-contrib/memory/memory
label=MEM 
interval=30

[cpu]
command=i3blocks-contrib/cpu_usage/cpu_usage
LABEL=CPU 
interval=10

[temperature]
command=i3blocks-contrib/temperature/temperature
label=TMP 
interval=10

[iface]
command=output=$(i3blocks-contrib/iface/iface); [ -z "$output" ] && echo "NIC down" || echo "$output"
LABEL=IP 
interval=10
ADDRESS_FAMILY=inet
display_wifi_name=0

[time]
command=echo $(date +"DT %Y-%m-%d %H:%M")
interval=30
