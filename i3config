set $mod Mod4
floating_modifier $mod

font pango: Operator Mono 8

focus_follows_mouse no

#for_window [class="."] border pixel 2

gaps inner 7
gaps outer 3

smart_borders on

workspace_layout tabbed

set $bg-color 	         #BFBFBF
set $inactive-bg-color   #282A36
set $text-color          #282A36
set $inactive-text-color #BFBFBF
set $urgent-bg-color     #FF5555
set $bar-bg              #282A36

exec --no-startup-id nitrogen --restore
exec --no-startup-id compton --config /home/amir/.config/compton/compton.conf 
exec --no-startup-id xset -b
exec --no-startup-id setxkbmap -option grp:alt_shift_toggle us,ir

bindsym Print exec maim ~/Pictures/$(date +%m-%d_%H-%M-%S_shot).png && notify-send $(date "+~/Pictures/%m-%d_%H-%M-%S_shot.png")
bindsym $mod+d exec dmenu_run -p run: -nb '$bar-bg' -sf '$text-color' -sb '$bg-color' -fn 'Operator Mono:pixelsize=12' #-b
bindsym $mod+Return exec termite
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r reload

bindsym $mod+F7 exec --no-startup-id xbacklight -inc 5
bindsym $mod+F8 exec --no-startup-id xbacklight -dec 5
bindsym $mod+F6 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym $mod+F5 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%

bindsym $mod+Shift+Right exec --no-startup-id cmus-remote -n
bindsym $mod+Shift+Left exec --no-startup-id cmus-remote -r


bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%

bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down


bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+f floating toggle

bindsym $mod+Tab focus mode_toggle

bindsym $mod+Down split v
bindsym $mod+Right split h

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+space bar mode toggle

